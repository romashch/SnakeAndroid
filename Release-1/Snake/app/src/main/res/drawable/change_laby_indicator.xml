<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#b0b0b0"
                android:endColor="#404040"
                android:startColor="#404040">

            </gradient>
            <size
                android:width="20dp"
                android:height="20dp">

            </size>
            <corners
                android:radius="8dp">

            </corners>
        </shape>
    </item>
    <item>
        <clip>
            <layer-list>
                <item
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp">

                    <shape>
                        <gradient
                            android:angle="-90"
                            android:centerColor="#050505"
                            android:endColor="#000000"
                            android:startColor="#101010">

                        </gradient>
                        <corners
                            android:radius="8dp">

                        </corners>
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>